@model ProjectNews_ASP.NET_Core_Mvc.Models.Category

@{
    ViewData["Title"] = "Detalils";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .section-title {
        margin-bottom: 40px;
    }

    .card {
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        border-radius: 10px;
    }

    .details-group {
        margin-bottom: 1.5rem;
    }

    .details-label {
        font-weight: 600;
        color: #495057;
    }

    .details-value {
        color: #212529;
    }

    .btn {
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
        }
</style>

<section class="section">
    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">
            <h2>تفاصيل التصنيف</h2>
            <p>عرض معلومات التصنيف بالتفصيل</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <dl class="row">
                            <div class="details-group col-12">
                                <dt class="details-label">اسم التصنيف</dt>
                                <dd class="details-value">@Html.DisplayFor(model => model.Name)</dd>
                            </div>

                            <div class="details-group col-12">
                                <dt class="details-label">وصف التصنيف</dt>
                                <dd class="details-value">@Html.DisplayFor(model => model.Description)</dd>
                            </div>
                        </dl>

                        <div class="text-center mt-4">
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                                <i class="fas fa-edit"></i> تعديل
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-right"></i> العودة للقائمة
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>