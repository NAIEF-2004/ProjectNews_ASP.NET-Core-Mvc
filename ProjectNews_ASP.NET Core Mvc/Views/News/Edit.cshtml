@model ProjectNews_ASP.NET_Core_Mvc.Models.News

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .section-title {
        margin-bottom: 40px;
    }

    .card {
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        border-radius: 10px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .control-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    .current-image {
        max-width: 200px;
        margin-top: 10px;
    }
</style>

<section class="section">
    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">
            <h2>تعديل الخبر</h2>
            <p>قم بتعديل تفاصيل الخبر في النموذج أدناه</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Edit" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Image" />

                            <div class="form-group">
                                <label asp-for="Title" class="control-label">عنوان الخبر</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="control-label">صورة الخبر</label>
                                <input type="file" name="newImage" class="form-control" accept="image/*" />
                                @if (!string.IsNullOrEmpty(Model.Image))
                                {
                                    <div class="mt-2">
                                        <img src="@Model.Image" alt="Current Image" class="current-image img-thumbnail" />
                                    </div>
                                }
                            </div>

                            <div class="form-group">
                                <label asp-for="Topic" class="control-label">موضوع الخبر</label>
                                <textarea asp-for="Topic" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Topic" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Data" class="control-label">تاريخ الخبر</label>
                                <input asp-for="Data" type="date" class="form-control" />
                                <span asp-validation-for="Data" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="control-label">تصنيف الخبر</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> حفظ التعديلات
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-right"></i> العودة للقائمة
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // معاينة الصورة الجديدة عند اختيارها
        document.querySelector('input[type="file"]').addEventListener('change', function(e) {
            if (this.files && this.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var currentImage = document.querySelector('.current-image');
                    if (currentImage) {
                        currentImage.src = e.target.result;
                    }
                }
                reader.readAsDataURL(this.files[0]);
            }
        });
    </script>
}