@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="section">
    <div class="container" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                        <p class="text-center text-muted mb-4">أدخل بريدك الإلكتروني لإرسال رابط إعادة تعيين كلمة المرور</p>

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                            <div class="form-floating mb-4">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                       aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    إرسال رابط إعادة التعيين
                                </button>
                            </div>

                            <div class="text-center mt-4">
                                <p class="mb-0">
                                    <a asp-page="./Register" class="text-decoration-none">
                                        <i class="fas fa-user-plus me-1"></i>
                                        إنشاء حساب جديد
                                    </a>
                                </p>
                                <p class="mt-2">
                                    <a asp-page="./Login" class="text-decoration-none">
                                        <i class="fas fa-sign-in-alt me-1"></i>
                                        العودة لتسجيل الدخول
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .section {
            padding: 80px 0;
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
        }

        .card {
            border: none;
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            }

        .form-floating > .form-control:focus,
        .form-floating > .form-control:not(:placeholder-shown) {
            padding-top: 1.625rem;
            padding-bottom: 0.625rem;
        }

        .btn-primary {
            padding: 0.8rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(13, 110, 253, 0.2);
            }

        .text-decoration-none:hover {
            color: #0d6efd !important;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}